set showcmd		" Show (partial) command in status line.
set autowrite		" Automatically save before commands like :next and :make
set nocompatible
set number
filetype on 
set history=1000
set autoindent
set smartindent
set tabstop=4
set shiftwidth=4
set showmatch
set guioptions=T
set ruler
set nohls
set backspace=2

imap jj <Esc>
